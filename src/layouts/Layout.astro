---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/logoremoved.png" />
		<!-- inter font from google fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Diseño web moderno y desarrollo web profesional para llevar tu negocio al siguiente nivel. Atrae más clientes con un sitio web impactante.">
		<meta name="keywords" content="diseño web, desarrollo web, sitios web profesionales, diseño de páginas web, servicios de desarrollo web, diseñador web freelance, JV CODE, diseño UX/UI, optimización SEO, páginas web modernas, Honduras">
		<link rel="canonical" href="https://jvcode.net/">
		<meta property="og:title" content="Diseño y Desarrollo Web Profesional - JV CODE">
		<meta property="og:description" content="Ofrecemos servicios de diseño y desarrollo web profesional para empresas que buscan destacar en línea. Contáctanos hoy mismo.">
		<meta property="og:type" content="website">
		<meta property="og:url" content="https://jvcode.net/">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body{
		font-family: "Inter Tight", sans-serif;
		background-color: var(--darkBlue);
		overflow-x: hidden;
	}

	:root{
		scroll-behavior: smooth;
		--skyBlue: #5CE1E6;
		--lightWhite: #FDFFFC;
		--darkBlue: #001D1E;
	}
</style>
